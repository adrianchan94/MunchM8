<div class="row">
    <div class="col-lg-6 col-md-12">
        <div class="card-deck">
            <div class="card cardFrame">
                <div class="card-header bg-transparent border-success">
                    <h1 class="profileHeader text-center">{{info.name}}</h1>
                </div>
                <img class="card-img-top coverPhotoFrame" src="{{info.cover_photo_URL}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">About Me</h5>
                    <p class="card-text">
                        {{info.about_me}}
                    </p>
                    <h5 class="card-title">Interests</h5>
                    <p>{{info.interests}}</p>
                    <div class="editProfile">
                        <a class="btn btn-primary" id="editButton" role="button">Edit Profile</a>
                    </div>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-md-12">
        <div class="span12 mr-2">
            <div class="container">
                <div id="calendar" class="mt-5 ">
                </div>
            </div>
        </div>
    </div>
</div>

